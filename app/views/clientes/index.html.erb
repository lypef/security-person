<%= render '/renders/checkstatus'%>
<%=  render '/renders/check_level'%>
<% if user_signed_in? %>
<div class="table-responsive">
<div class="panel panel-default">
  <!-- Default panel contents -->
<div class="panel-heading">Lista de clientes</div>
<table class="table table-striped table-condensed table-responsive">
  <tr>
      <th>ID</th>
      <th>MOVIL</th>
      <th>NOMBRE</th>
      <th>APELLIDO</th>
      <th>EMAIL</th>
      <th>STATUS</th>
      <th>VER</th>
      <th>EDITAR</th>
      <th>ELIMINAR</th>                  
    </tr>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.id %></td>
        <td><%= cliente.id_movil %></td>        
        <td><%= cliente.name %></td>
        <td><%= cliente.apellidos %></td>
        <td><%= cliente.email %></td>
        <td><% if cliente.status == true %>
        En linea
        <% else %>
        Desconectado
        <% end %>  
        </td>
        <td><%= link_to 'VER', cliente , class:'btn btn-success' %></td>
        <td><%= link_to 'EDITAR', edit_cliente_path(cliente) , class:'btn btn-primary' %></td>
        <td><%= link_to 'ELIMINAR', cliente, method: :delete, data: { confirm: 'Esta seguro que desea eliminar el usuario?' } , class:'btn btn-danger' , disabled: true %></td>
      </tr>
    <% end %>
</table>
</div>
<% else %>
    <%= render '/renders/errorsession'%>
<% end %> 
