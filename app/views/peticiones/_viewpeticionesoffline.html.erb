
<div class= "panel panel-default">
  <div class="panel-heading">

      <form class="navbar-form " role="search">
      <div class="form-group">
      <input type="text" class="form-control" placeholder="ID - CLIENTE">
      </div>
      <button type="submit" class="btn btn-danger">Submit</button> | 
      Peticiones atendidas del usuario # <%= current_user.id %> - [ <%= current_user.name.upcase %> <%= current_user.apellidos.upcase %> ]
      </form>

  </div>
  <table class= "table table-striped table-condensed table-responsive">
  <th>CLIENTE</th><th>TIPO DE PETICION</th><th>DESCRIPCION</th><th>FECHA</th><th>ESTADO</th><th></th>
<% @peticiones.each do |p| %>
  <% if p.user_id == current_user.id %>
    <tr>
  <td><%= p.cliente.name %> <%= p.cliente.apellidos %></td>
  <td><%= p.peticiones %></td>
  <td><%= p.descripcion_peticion %></td>
  <td><%= p.date_peticion %></td>

  
  <% if p.status_peticion == true && p.user_id != nil && p.date_respuesta != nil && p.descripcion_respuesta != nil %>
  <td><%= link_to '', '',class:'btn btn-success glyphicon glyphicon-ok' %></td>
  <% end %>

  <% if p.status_peticion == true && p.user_id != nil && p.date_respuesta == nil && p.descripcion_respuesta == nil && p.status_respuesta == nil%>
  <td><%= link_to '', '',class:'btn btn-warning glyphicon glyphicon-refresh' %></td>
  <% end %>
  
  <% if p.status_peticion == false && p.user_id == current_user.id &&  %>
  <td><%= link_to '', '',class:'btn btn-danger glyphicon glyphicon-remove' %></td>
  <% end %>
  
  <td><%= link_to 'Ver detalles', p %></td>
  </tr>
  <%end%>
<% end %>
</table>
</div>
<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle"
          data-toggle="dropdown">
    Título del botón <span class="caret"></span>
  </button>
 
  <ul class="dropdown-menu" role="menu">
    <li><a href="#">Acción #1</a></li>
    <li><a href="#">Acción #2</a></li>
    <li><a href="#">Acción #3</a></li>
    <li class="divider"></li>
    <li><a href="#">Acción #4</a></li>
  </ul>
</div>